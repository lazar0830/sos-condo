rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Require Firebase Auth for all reads/writes
    function isAuthenticated() {
      return request.auth != null;
    }
    match /users/{id} { allow read, write: if isAuthenticated(); }
    match /buildings/{id} { allow read, write: if isAuthenticated(); }
    match /units/{id} { allow read, write: if isAuthenticated(); }
    match /components/{id} { allow read, write: if isAuthenticated(); }
    match /tasks/{id} { allow read, write: if isAuthenticated(); }
    match /providers/{id} { allow read, write: if isAuthenticated(); }
    match /requests/{id} { allow read, write: if isAuthenticated(); }
    match /expenses/{id} { allow read, write: if isAuthenticated(); }
    match /contingency_docs/{id} { allow read, write: if isAuthenticated(); }
    match /notifications/{id} { allow read, write: if isAuthenticated(); }
  }
}
